{
  "compilerOptions": {
    /* ================= BASIC ================= */
    "target": "es2016",
    "module": "commonjs",

    /* ================= RESOLUTION ================= */
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* ================= PATHS ================= */
    "rootDir": "./",
    "outDir": "./dist",

    /* ================= INTEROP ================= */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* ================= TYPE CHECKING ================= */
    "strict": true,
    "skipLibCheck": true,

    /* ðŸ”¥ MOST IMPORTANT FOR RENDER ðŸ”¥ */
    "noEmitOnError": false,

    /* ================= TYPES ================= */
    "types": [
      "node",
      "express"
    ]
  },

  /* ================= WHAT TO COMPILE ================= */
  "include": [
    "src/**/*",
    "server.ts"
  ],

  /* ================= WHAT TO IGNORE ================= */
  "exclude": [
    "node_modules",
    "dist"
  ]
}
