{
  "compilerOptions": {
    /* Language */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Paths */
    "rootDir": "./",
    "outDir": "./dist",

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* IMPORTANT FOR RENDER */
    "skipLibCheck": true

    /* ‚ùå DO NOT ADD "types": [] HERE */
  },

  "include": [
    "src/**/*",
    "server.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
