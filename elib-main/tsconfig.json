{
  "compilerOptions": {
    /* ===============================
       Language & Environment
    =============================== */
    "target": "es2016",

    /* ===============================
       Module System
    =============================== */
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* ===============================
       Paths
    =============================== */
    "rootDir": "./",
    "outDir": "./dist",

    /* ===============================
       Interop & Compatibility
    =============================== */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* ===============================
       Type Checking
    =============================== */
    "strict": true,
    "skipLibCheck": true,

    /* ===============================
       Types (IMPORTANT for Render)
    =============================== */
    "types": [
      "node",
      "express"
    ]
  },

  /* ===============================
     What to compile
  =============================== */
  "include": [
    "src/**/*",
    "server.ts"
  ],

  /* ===============================
     What to ignore
  =============================== */
  "exclude": [
    "node_modules",
    "dist"
  ]
}
