{
  "compilerOptions": {
    /* ================= BASIC ================= */
    "target": "es2016",
    "module": "commonjs",

    /* ================= RESOLUTION ================= */
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* ================= PATHS ================= */
    "rootDir": "./",
    "outDir": "./dist",

    /* ================= INTEROP ================= */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* ================= TYPE CHECKING ================= */
    "strict": true,

    /* ðŸ”¥ RENDER FIX ðŸ”¥ */
    "skipLibCheck": true,
    "noEmitOnError": false
  },

  /* ================= FILES ================= */
  "include": [
    "src/**/*",
    "server.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
