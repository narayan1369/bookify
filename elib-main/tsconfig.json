{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },

  "include": [
    "src/**/*",
    "server.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
